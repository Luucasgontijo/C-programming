{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang build and run",
      "command": "/usr/bin/clang",
      "args": [
        "-std=c11",
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Task generated by Debugger.",
      "dependsOn": [],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "windows": {
        "command": "cmd.exe",
        "args": ["/c", "${fileDirname}\\${fileBasenameNoExtension}.exe"]
      },
      "linux": {
        "command": "bash",
        "args": ["-c", "\"${fileDirname}/${fileBasenameNoExtension}\""]
      }
    }
  ],
  "version": "2.0.0"
}